<div class="mb-5">
  <%= f.label :day_of_the_week, "Día de la semana", class: label_classes %>
  <%= f.collection_select :day_of_the_week, days_of_week, :id, :title, { include_blank: true }, class: input_classes %>
</div>

<div class="mb-5">
  <%= f.label :picto_id, "Picto", class: label_classes %>
  <%= f.collection_select :picto_id, Picto::FindAll.call(enabled: true).value!, :id, :keyword, { include_blank: true }, class: input_classes %>
</div>

<div class="mb-5">
  <%= f.label :title, "Título", class: label_classes %>
  <%= f.text_field :title, class: input_classes %>
</div>
